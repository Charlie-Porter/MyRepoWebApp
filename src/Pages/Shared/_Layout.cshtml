<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] TheDump</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css?family=Yellowtail&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">
    <base href="/" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Folders/Folders">TheDump</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="true">
                <span class="navbar-toggler-icon"></span>
            </button>                   
            <div class="collapse navbar-collapse">
                <div class="nav navbar-nav ml-auto w-100 justify-content-end">
                @if (User.Identity.IsAuthenticated)
                {  
                               
                        <a class="nav-link" asp-page="/Folders/Folders">Uploads</a>
                        <a class="nav-link" asp-page="/Account/Users">Users</a>                  
                        <form method="post" class="text-light" asp-page="/Account/Logout">Welcome @User.Identity.Name
                        <button type="submit" class="btn btn-light">Logout</button>
                        </form>
                   
                }
                else
                {
                 
                        <a class="nav-link" asp-page="./RegisterUser">Register</a>                   
                        <form method="post" class="form-inline" asp-page="/Account/Login">
                            <button type="submit" class="btn btn-light">Login</button>
                        </form>
    
                }
                </div>
            </div>
        </div>

    </nav>   
     <div id="page-content-wrapper">
                <div class="container-fluid">
            @RenderBody()
            </div>
            </div>
    
    <footer class="border-top footer">
        <div class="container">
            &copy; 2022 - MyRepoWebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
