@page
@model MyRepoWebApp.Pages.Photos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h4>Are you sure you want to delete this? If so, click the delete button</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Upload.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Upload.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Upload.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Upload.UpdateDate)
        </dd>       
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Upload.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-outline-success" asp-page="./Photos" asp-route-id="@Convert.ToInt32(Request.Cookies["FolderId"])">Back to List</a> 
    </form>
</div>
