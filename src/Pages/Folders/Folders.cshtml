@page
@model MyRepoWebApp.Pages.Folders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Folders</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FolderModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FolderModel[0].owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FolderModel[0].UpdateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FolderModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                <a asp-page="./Photos/Create" asp-route-id="@item.ID">Upload Photos</a>
                <a asp-page="./Folders/Delete" asp-route-id="@item.ID">Delete Folder</a>
            </td>
        </tr>
}
    </tbody>
</table>
