@page
@model MyRepoWebApp.Pages.Account.RegisterUser

@{
    ViewData["Title"] = "Create";
}

<h3>Please register your account, once registered we will send you an verification email. </h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CredentialModel.Email" class="control-label"></label>
                <input asp-for="CredentialModel.Email" class="form-control" />
                <span asp-validation-for="CredentialModel.Email" class="text-danger"></span>
            </div>
            <p align="left" style="color:red">@Html.ValidationMessage("DuplicateUser")</p>

            <div class="form-group">
                <label asp-for="CredentialModel.Password" class="control-label"></label>
                <input type="password" asp-for="CredentialModel.Password" class="form-control" />
                <span asp-validation-for="CredentialModel.Password" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-success" asp-page="./Login">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
