@page
@model MyRepoWebApp.Pages.Account.UsersModel

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a class="btn btn-secondary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CredentialModel[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CredentialModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-outline-light" asp-page="./Edit" asp-route-id="@item.UserId">Edit</a> 
                <a class="btn btn-outline-light" asp-page="./Details" asp-route-id="@item.UserId">Details</a> 
                <a class="btn btn-outline-light"  asp-page="./Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
